@page "/Usuario/Conta/"
@inject Microsoft.Extensions.Localization.IStringLocalizer<homeLocalizer> _homeLocalizer;
@inject Microsoft.Extensions.Localization.IStringLocalizer<validationLocalizer> _localizer;

<AuthorizeView>
    <Authorized Context="authContext">
        @if (UsuarioConta is not null)
        {
            <RadzenTemplateForm Data="@UsuarioConta" TItem="BLL.Models.Usuario" Submit="@OnSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <FormularioUsuario Usuario="UsuarioConta" SenhaVisivel="false" />
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="@_homeLocalizer[homeLocalizer.Salvar]" />
                <NavLink href="/Usuario/DashBoard">
                    <input type="button" value="@_homeLocalizer[homeLocalizer.Voltar]" class="btn btn-dark" />
                </NavLink>
            </RadzenTemplateForm>
        }
        else
        {
            <Carregando />
        }
    </Authorized>
    <NotAuthorized>
        <Redirecionar />
    </NotAuthorized>
</AuthorizeView>