@inject Microsoft.Extensions.Localization.IStringLocalizer<homeLocalizer> localizer

<div class="modal fade" tabindex="-1" role="dialog" id="Modais"
     aria-labelledby="Modais" aria-hidden="true">

    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content p-2">
            <h5>@localizer[homeLocalizer.MensagemExclusao] @Id?</h5>
            <div>
                <button class="btn btn-primary" data-dismiss="modal" @onclick="Eliminar">@localizer[homeLocalizer.Sim]</button>
                <button class="btn btn-danger" data-dismiss="modal">@localizer[homeLocalizer.Cancelar]</button>
            </div>
        </div>
    </div>
</div>

